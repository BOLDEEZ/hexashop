    <!-- ***** Main Banner Area Start ***** -->
    <div class="page-heading" id="top" style="margin-top:0;">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="inner-content">
                        <h2>Product Page</h2>
                        <span style="display:none;">Awesome &amp; Creative HTML CSS layout by TemplateMo</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- ***** Main Banner Area End ***** -->


    <!-- ***** Product Area Starts ***** -->
    <section class="section" id="product">
        <div class="container">
            <div class="row">
                <div class="col-lg-8">
                <div class="left-images">
                    {% if product.images.size > 0 %}
                        {% for image in product.images %}
                            <img src="{{ image.src | img_url: 'large' }}" alt="{{ image.alt | escape }}">
                        {% endfor %}
                    {% endif %}
                </div>
            </div>
            <div class="col-lg-4">
                <div class="right-content">
                    <h4>{{product.title}}</h4>
                    <span class="price">{{ product.price | money_with_currency  }}</span>
                    <ul class="stars">
                        <li><i class="fa fa-star"></i></li>
                        <li><i class="fa fa-star"></i></li>
                        <li><i class="fa fa-star"></i></li>
                        <li><i class="fa fa-star"></i></li>
                        <li><i class="fa fa-star"></i></li>
                    </ul>
                    <span>{{product.description}}</span>
                    <form action="/cart/add" method="post" id="add-to-cart-form">
                        <div class="quantity-content">
                            <div class="left-content">
                                <h6>No. of Orders</h6>
                            </div>
                            <div class="right-content">
                                <div class="quantity buttons_added">
                                    <input type="button" value="-" class="minus"><input type="number" step="1" min="1" max="4" name="quantity" value="1" title="Qty" class="input-text qty text" size="4" pattern="" inputmode=""><input type="button" value="+" class="plus">
                                </div>
                            </div>
                           
                            <input type="hidden" name="id" value="{{ product.id }}">
                            {% comment %} <input type="hidden" name="quantity" value="1"> {% endcomment %}
                            <select name="id" style="display:none;">
                                {% for variant in product.variants %}
                                    <option value="{{variant.id}}">{{variant.title}}</option>
                                {% endfor %}
                            </select>
                            
                        </div>
                    
                        <div class="total">
                            <h4>Total: {{ product.price | money_with_currency  }}</h4>
                            <div class="main-border-button" >
                                {% comment %} <a>Add To Cart</a> {% endcomment %}
                                <button type="submit" id="add-to-cart-btn" class="btn btn-outline-dark">Add To Cart</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            </div>
        </div>
    </section>
    <!-- ***** Product Area Ends ***** -->